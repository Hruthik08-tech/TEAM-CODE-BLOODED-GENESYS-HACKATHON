# =================================================================
# Waste Exchange Matching API - Environment Configuration
# =================================================================
# Copy this file and customize the values for your environment
# For production, use strong passwords and secure credentials

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# MySQL database connection settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=waste_exchange
DB_USER=root
DB_PASSWORD=your_secure_password_here

# =================================================================
# REDIS CONFIGURATION
# =================================================================
# Redis cache server settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=add_your_password
REDIS_DB=0

# =================================================================
# API CONFIGURATION
# =================================================================
# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# =================================================================
# CACHE CONFIGURATION
# =================================================================
# How long to cache search results (in seconds)
# Default: 3600 = 1 hour
CACHE_TTL_SECONDS=3600

# =================================================================
# MATCHING ALGORITHM CONFIGURATION
# =================================================================
# Default search radius if not specified in demand (in kilometers)
DEFAULT_SEARCH_RADIUS_KM=50

# Maximum number of results to return per search
MAX_RESULTS=20

# Minimum string similarity score to consider a match (0.0 - 1.0)
# 1.0 = exact match, 0.0 = no similarity required
# Recommended: 0.5 - 0.7
SIMILARITY_THRESHOLD=0.6

# =================================================================
# SEMANTIC SEARCH CONFIGURATION (NEW!)
# =================================================================
# Enable semantic search for intelligent matching
# When enabled, "rice" will match "basmati rice", "jasmine rice", etc.
USE_SEMANTIC_SEARCH=True

# Weight for semantic similarity (0.0 - 1.0)
# Higher = more emphasis on meaning
SEMANTIC_WEIGHT=0.7

# Weight for fuzzy/exact matching (0.0 - 1.0)
# Higher = more emphasis on exact text matching
# Note: SEMANTIC_WEIGHT + FUZZY_WEIGHT should generally equal 1.0
FUZZY_WEIGHT=0.3

# Sentence transformer model to use
# Options:
#   - all-MiniLM-L6-v2 (default, fast, good for short texts)
#   - all-mpnet-base-v2 (more accurate but slower)
#   - paraphrase-multilingual-MiniLM-L12-v2 (supports multiple languages)
SEMANTIC_MODEL=all-MiniLM-L6-v2
